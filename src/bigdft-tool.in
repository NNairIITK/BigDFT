  parser = OptionParser("usage: bigdft-tool -a ACTION")
  parser.add_option("-a", "--action", default=actions[0],
                    help="perform one of the action: %s " % toHelp(actions) +
                    "[default: %default]. "
                    "Possible options for each action are described below.")
